generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String @unique
  password String
  name     String

  role Role @default(USER)

  team   Team? @relation(fields: [teamId], references: [id])
  teamId Int?

  tasks     Task[]
  solutions Solution[]
  likes     TaskLike[]
}

model Team {
  id    Int    @id @default(autoincrement())
  name  String @unique
  token String @unique @default(uuid())

  captainId Int
  members   User[]

  solutions Solution[]
}

